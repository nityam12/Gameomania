<div id="home-container">
<section id="feed-posts">
    <h4>Posts</h4>
    <!-- locals is an object of res use locals.user instead of user -->
    <% if(locals.user){%> 
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3" placeholder="TypeHere.." required></textarea>
        <input type="submit" value="Post">
    </form>
<%}%>

    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>
                <%- include('_post') -%>
                
            <%}%>
        </ul>
    </div>
</section>


<section id="user-friends">

   <div id="friends">
    <h4>Friends</h4>
    <%if(locals.user && personal!=-1 && personal.friendships.length > 0) {%>
        <% for(f of personal.friendships){%>
           
          <p>
            <%if(locals.user.id == f.from_user.id){%>
           
                <!-- <%= f.to_user.name%> -->
                <a href="/users/profile/<%= f.to_user.id %>"><%= f.to_user.name %></a>
                <%}else{%>
                    
                    <!-- <%= f.from_user.name%> -->
                    <a href="/users/profile/<%= f.from_user.id %>"><%= f.from_user.name %></a>
                    <%}%>      
                    
            </p>  
    <%}%>
    


    <%}%>




   </div> 
    
 
    <div id="users">
        <h4>Users</h4>
        <% for(u of all_users){ %>
            <p>
    
                <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
            
            </p>
    
    
         <%}%>   
    </div>
    
</section>

<%- include('_chat_box') -%>
